apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn-ui-ingress
  namespace: longhorn-system
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$2
spec:
  rules:
  - http:
      paths:
      - path: /longhorn(/|$)(.*)
        pathType: Prefix
        backend:
          service:
            name: longhorn-frontend-nodeport
            port:
              number: 80